<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.antoinebaudot.lab1mad.SendRequest"
    android:orientation="vertical"
    android:background="@color/photoBackground">


    <include layout="@layout/toolbar" android:id="@+id/myToolbar"/>


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <Button android:id="@+id/defineStart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="define start"
            android:background="@drawable/custom_button_login"
            android:textColor="@android:color/white"/>

        <TextView   android:id="@+id/startDate"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content" />



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp">

        <Button android:id="@+id/defineEnd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="define end"
            android:background="@drawable/custom_button_login"
            android:textColor="@android:color/white"/>

        <TextView android:id="@+id/endDate"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            />


    </LinearLayout>



    <Button android:id="@+id/send"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SEND REQUEST"
        android:background="@drawable/custom_button_login"
        android:textColor="@android:color/white"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>



</LinearLayout>
